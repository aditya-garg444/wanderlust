<% if(successMsg && successMsg.length) { %>
        <div class="alert alert-success alert-dismissible fade show" style="justify-self: center; width: 40%;" role="alert">
                <%= successMsg %>
                <button type="button" class="btn-close" data-bs-dismiss="alert" aria-label="Close"></button>
        </div>
<% } %>

<% if(errorMsg && errorMsg.length) { %>
        <div class="alert alert-danger alert-dismissible fade show" style="justify-self: center; width: 40%;" role="alert">
                <%= errorMsg %>
                <button type="button" class="btn-close" data-bs-dismiss="alert" aria-label="Close"></button>
        </div>
<% } %>