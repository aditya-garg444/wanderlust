<% layout("layouts/boilerplateHome") -%>
    <div class="index-ejs">
        <div class="index-ejs-main">
            <div class="top-bar">
                <div class="filter-scroll-container">
                    <button class="scroll-btn left-btn" aria-label="Scroll left"><i class="fa-solid fa-chevron-left"></i></button>
                
                <div class="filters">
                    <div class="filter" data-filter="All">
                        <i class="fa-solid fa-rainbow"></i>
                        <p>All</p>
                        <div class="line"></div>
                    </div>
                    <div class="filter" data-filter="Trending">
                        <i class="fa-solid fa-fire"></i>
                        <p>Trending</p>
                        <div class="line"></div>
                    </div>
                    <div class="filter" data-filter="Rooms">
                        <i class="fa-solid fa-bed"></i>
                        <p>Rooms</p>
                        <div class="line"></div>
                    </div>
                    <div class="filter" data-filter="Iconic Cities">
                        <i class="fa-solid fa-mountain-city"></i>
                        <p>Iconic Cities</p>
                        <div class="line"></div>
                    </div>
                    <div class="filter" data-filter="Castles">
                        <i class="fa-brands fa-fort-awesome"></i>
                        <p>Castles</p>
                        <div class="line"></div>
                    </div>
                    <div class="filter" data-filter="Countryside">
                        <i class="fa-solid fa-tree"></i>
                        <p>Countryside</p>
                        <div class="line"></div>
                    </div>
                    <div class="filter" data-filter="Hill Stations">
                        <i class="fa-solid fa-mountain"></i>
                        <p>Hill Stations</p>
                        <div class="line"></div>
                    </div>
                    <div class="filter" data-filter="Beach">
                        <i class="fa-solid fa-umbrella-beach"></i>
                        <p>Beach</p>
                        <div class="line"></div>
                    </div>
                    <div class="filter" data-filter="Camping">
                        <i class="fa-solid fa-house-flag"></i>
                        <p>Camping</p>
                        <div class="line"></div>
                    </div>
                    <div class="filter" data-filter="Arctic">
                        <i class="fa-regular fa-snowflake"></i>
                        <p>Arctic</p>
                        <div class="line"></div>
                    </div>
                    <div class="filter" data-filter="Boats">
                        <i class="fa-solid fa-sailboat"></i>
                        <p>Boats</p>
                        <div class="line"></div>
                    </div>
                    <div class="filter" data-filter="Amazing Pools">
                        <i class="fa-solid fa-person-swimming"></i>
                        <p>Amazing Pools</p>
                        <div class="line"></div>
                    </div>
                    <div class="filter" data-filter="Creative Spaces">
                        <i class="fa-solid fa-palette"></i>
                        <p>Creative Spaces</p>
                        <div class="line"></div>
                    </div>
                    <div class="filter" data-filter="Skiing">
                        <i class="fa-solid fa-person-skiing"></i>
                        <p>Skiing</p>
                        <div class="line"></div>
                    </div>
                    <div class="filter" data-filter="Camper Vans">
                        <i class="fa-solid fa-caravan"></i>
                        <p>Camper Vans</p>
                        <div class="line"></div>
                    </div>
                </div>
                <button class="scroll-btn right-btn" aria-label="Scroll right"><i class="fa-solid fa-chevron-right"></i></button>
            </div>
                <div class="tax-toggle">
                    <div class="form-check-reverse form-switch">
                        <label class="form-check-label" for="flexSwitchCheckDefault">Display total after taxes</label>
                        <input class="form-check-input" type="checkbox" role="switch" id="flexSwitchCheckDefault">
                    </div>
                </div>
            </div>
            <div class="all-cards">
                <% for(let listing of allListings) {%>
                    <a href="/listings/<%= listing._id%>">
                        <div class="card custom-card">
                            <img src="<%= listing.image.url%>" class="card-img-top card-img" alt="listing_image">
                            <div class="card-img-overlay"></div>
                            <div class="card-body custom-card-body">
                              <p class="card-text">
                                <b><%= listing.title %></b><br>
                                <span class="price">&#8377;<%=listing.price.toLocaleString("en-IN") %></span> / night <i class="tax-info">&nbsp; + 18% GST</i>
                            </p>
                            </div>
                        </div>
                    </a>
                <%}%>
            </div>
        </div>
    </div>
    
    <script src="/js/filter.js"></script>
    <script src="/js/scroll.js"></script>
    <script src="/js/toggleSwitch.js"></script>